<h1>New user registration</h1>
<%= form_for :user, url: users_path do |f| %>

	<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> must be corrected for you to register:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
	1-16 characters, must contain one letter. Alphanumeric, but may use - _ and . as separators.
  </p>
 
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
	<%= f.password_field :password_confirmation %><br>
	6-20 characters, at least one: lowercase letter, uppercase letter, number, and symbol (?, -, ., +, *, @, $, \, /, or _)
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% link_to 'Back', users_path %>